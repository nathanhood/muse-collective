extends ../shared/template

block content

  .page-header.text-center
    h1 Register

  if(message)
    .alert(style='color: red')
      p= message

  .col-sm-4
  .col-sm-4
    .well
      form#registration-form(action='/register', method='post')
        label Email
        input.form-control(type='email', name='email')
        br
        label Password
        input.form-control(type='password', name='password')
        br
        button.action-button(type='submit') Register
      hr
      p Use your Twitter or Facebook account to register
      a#facebook-login(href='/auth/facebook')
        img(src='/img/assets/facebook.png')
      a#twitter-login(href='/auth/twitter')
        img(src='/img/assets/twitter.png')
      p
          | Already have an account?&nbsp
          a.link(href='/') Home
          
  .col-sm-4
