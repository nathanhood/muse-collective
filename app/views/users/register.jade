extends ../shared/template

block content
  h1= title

  if(message)
    .alert(style='color: red')
      p= message

  form(action='/register', method='post')
    label Email
    input(type='email', name='email')
    br
    label Password
    input(type='password', name='password')
    br
    button(type='submit') Register

  hr
  p
      | Already have an account?
      a(href='/') Login
    p
      | Or go
      a(href='/') home
      | .
